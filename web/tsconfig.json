{
	"compilerOptions": {
		"composite": true,
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"checkJs": true,
		"noEmit": true,
		"paths": {
			"shared": ["../shared"]
		},
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "Components/cards/BoxCard.tx"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../shared"
		}
	]
}
